<%- include("../common/header.ejs")%>
    <%- include("../common/menu.ejs")%>
        <main class="md-4">
            <div class="p-5 mb-4" style="background-color: #adb5bd;">
                <div class="container text-center">
                    <h1>Posts</h1>
                </div>
            </div>

            <div class="container" style="margin-top: 5%;">
                <div class="row row-cols-1 row-cols-sm2 row-cols-md-3 g-3">
                    <% posts.forEach(post=> {%>

                        <div class="col">
                            <div class="card border-secondary mb-3" style="">
                                <img src="./img/gs.png" class="card-img-top" alt="...">
                                <div class="card-body" style="height: 100%;">

                                    <h5 class="card-title">
                                        <%= post.titulo%>
                                    </h5>
                                    <p class="card-text">
                                        <%= post.conteudo.substring(0,50)%>
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <%= post.data_criacao.toLocaleString("pt-br").split(" ").join(" Ã s ")%>
                                    </small>
                                </p>
                                <a href=" /post?id=<%=post.id_postagem%>" class="btn btn-secondary">Continue
                                                lendo</a>
                                </div>
                            </div>
                        </div>
                        <%}) %>

                </div>
            </div>

        </main>
        <%- include("../common/footer.ejs")%>