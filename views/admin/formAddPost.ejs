<%- include("../common/header") %>
    <%- include("../common/menu")%>
        <main class="md-4 h-100">
            <div class="p-5 mb-4" style="background-color: #adb5bd;">
                <div class="container">
                    <h1>Novo Post</h1>
                </div>
            </div>

            <div class="container" style="margin-top: 5%;">

                <form action="/admin/salvarForm" method="post">
                    <div class="mb-3">
                        <label for="titulo" class="form-label"> Título </label>
                        <input type="text" id="titulo" name="titulo" class="form-control" placeholder="Título do post"
                            autocomplete="off">
                    </div>

                    <div class="mb-3">
                        <label for="conteudo" class="form-label">Contéudo </label>
                        <textarea name="conteudo" id="conteudo" cols="30" rows="5" class="form-control"
                            style="resize:none;"></textarea>
                    </div>

                    <input type="submit" value="Criar" class="btn btn-secondary btn-lg w-100">

                </form>
            </div>
        </main>
        <%- include("../common/footer.ejs")%>