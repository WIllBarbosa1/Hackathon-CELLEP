<%- include("../common/header")%>
    <%- include("../common/menu")%>

        <main class="form-signin d-flex justify-content-center align-items-center" style="width: 100%; height: 100%;">
            <div class="d-flex justify-content-center align-items-center">

                <form action="admin/autenticar" method="post"
                    class="d-flex flex-column justify-content-center align-items-center"
                    style="width: 70vh ; height: 50vh; background-color: slategray; padding: 20px;">

                    <div class="w-75">

                        <h1 class="mb-5 text-center ">Login</h1>

                        <div class="form-floating mb-2">
                            <input type="text" name="usuario" class="form-control" id="usuario" placeholder="Usuário"
                                autocomplete="off" required>
                            <label for="usuario">Usuário</label>
                        </div>

                        <div class="form-floating mb-2">
                            <input type="password" name="senha" class="form-control" id="senha" placeholder="Senha"
                                autocomplete="off" required>
                            <label for="senha">Senha</label>
                        </div>

                        <button class="btn btn-large btn-secondary w-100 mt-4" type="submit">Entrar</button>
                    </div>

                </form>
            </div>
        </main>

        <%- include("../common/footer")%>